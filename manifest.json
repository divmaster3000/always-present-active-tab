{
  "manifest_version": 3,
  "name": "EQN Fake Active (on-click)",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab"],
  "background": { "service_worker": "background.js" },
  "description": "Фейково залишає активною вкладку",
  "action": {
    "default_title": "Make this tab fake active"
  },
  "host_permissions": [
    "https://eqn.hsc.gov.ua/*"
  ],
  "icons": {
    "16": "./icons/16.jpg",
    "32": "./icons/32.jpg",
    "48": "./icons/48.jpg",
    "128": "./icons/128.jpg"
  }
}